.yield
	- unless (@note.blank? && @todo_lists.blank? && @documents.blank?)
		.wrapper_with_padding
			#notes.clearfix
				- unless @note.blank?
					%h1 Notes
			
					- @note.each do |note|
						%a{ href: (url_for [note])}
							.note
								%p.title= note.title
								%p.date= time_ago_in_words(note.created_at)
			
	- else
		
		#bottom_cta
			.wrapper
				%h2 Welcome to NoteNote
				%p It appears you haven't created anything yet. You can press one of the below icons to create a Note, Todo-list or Document.
		= render 'new_bar'
