.wrapper_with_padding
	#notes.clearfix
		- unless @note.blank?
			- @note.each do |note|
				%a{ href: (url_for [note])}
					.note
						%p.title= note.title
						%p.date= time_ago_in_words(note.created_at)
		- else
		#bottom_cta
			.wrapper
				%h2 Add a note
				%p It appears you haven't created any notes yet. Lets create a new note now.
				= link_to "New Note", new_note_path, class: "button"