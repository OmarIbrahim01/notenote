.wrapper_with_padding
	#notes.clearfix
		%h1 Notes
		- unless @note.blank?
			= link_to "+", new_note_path, class: "button2"
			%br
			%br
			%br
			- @note.each do |note|
				%a{ href: (url_for [note])}
					.note
						%p.title= note.title
						%p.date= time_ago_in_words(note.created_at)
		- else
			#bottom_cta
				.wrapper
					%h2 Add a note
					%p It appears you haven't created any notes yet. Lets create a new note now.
					= link_to "+", new_note_path, class: "button2"
	%br
	%h1 To-do Lists
	= render file: "app/views/todo_lists/index"